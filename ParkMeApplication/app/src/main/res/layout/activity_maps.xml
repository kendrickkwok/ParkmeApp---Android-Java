<FrameLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.joseph.parkmeapplication.MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btnRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Coordinates" />

        <Button
            android:id="@+id/btnCircle"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:text="Check Radius" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cast_expanded_controller_text_color"
            android:gravity="center"
            android:text="5:00 Min"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cast_expanded_controller_text_color"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Directions" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Let me Receive Payment" />

        <Button
            android:id="@+id/Cancel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Cancel" />

    </LinearLayout>

</FrameLayout>