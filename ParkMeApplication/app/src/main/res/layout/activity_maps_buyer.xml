
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.joseph.parkmeapplication.MapsActivityBuyer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btnRestaurant"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Select Pin" />

        <Button
            android:id="@+id/btnCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Radius" />

        <Button
            android:id="@+id/btnDropAPin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Drop a pin" />

        <Button
            android:id="@+id/findPin"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Find Pins" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Remove Posted Pins" />

        <TextView
            android:id="@+id/calculateDistance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/cast_libraries_material_featurehighlight_text_body_color"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cast_expanded_controller_progress_text_color"
            android:text="TextView"
            android:textSize="30sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lets go!" />

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Met and Pay" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

</FrameLayout>
